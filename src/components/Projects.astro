---
import HTML5 from '../assets/icons/HTML5.astro'
import CSS3 from '../assets/icons/CSS3.astro'
import JavaScript from '../assets/icons/JavaScript.astro'
import ReactJS from '../assets/icons/ReactJS.astro'
import TailwindCSS from '../assets/icons/TailwindCSS.astro'
import Bootstrap from '../assets/icons/Bootstrap.astro'
import NextJS from '../assets/icons/NextJS.astro'
import FireBaseIcon from '../assets/icons/FireBaseIcon.astro'

const TAGS = {
  HTML5: {
    name: 'HTML5',
    class: 'bg-orange-500 text-white border-[1px] border-[#ffffff1a]',
    icon: HTML5,
  },
  CSS: {
    name: 'CSS3',
    class: 'bg-indigo-500 text-white border-[1px] border-[#ffffff1a]',
    icon: CSS3,
  },
  Bootstrap: {
    name: 'Bootstrap',
    class: 'bg-white text-gray-900 border-[1px] border-[#ffffff1a]',
    icon: Bootstrap,
  },
  MaterializeCSS: {},
  TailWindCSS: {
    name: 'TailwindCSS',
    class: 'bg-[#003159] text-white border-[1px] border-[#ffffff1a]',
    icon: TailwindCSS,
  },
  JavaScript: {
    name: 'JavaScript',
    class: 'bg-yellow-500 text-black border-[1px] border-[#ffffff1a]',
    icon: JavaScript,
  },
  React: {
    name: 'React.js',
    class: 'bg-indigo-500 text-white border-[1px] border-[#ffffff1a]',
    icon: ReactJS,
  },
  NextJS: {
    name: 'Next.js',
    class: 'bg-black text-white border-[1px] border-[#ffffff1a]',
    icon: NextJS,
  },
  FireBase: {
    name: 'Firebase',
    class: 'bg-white text-gray-900 border-[1px] border-[#ffffff1a] ',
    icon: FireBaseIcon,
  },
}

const PROJECTS = [
  {
    title: 'Chiteadas',
    description:
      'A website that fetch movie data from [TMDB API] and list the movies, it also allows to see the trailers of the movies (in case it has them) and search them with a search bar.',
    link: 'https://chiteadas.vercel.app/',
    github: 'https://github.com/CodeBreaker518/chiteadas',
    image: '/projects/chiteadas.webp',
    tags: [TAGS.HTML5, TAGS.CSS, TAGS.TailWindCSS, TAGS.NextJS, TAGS.React, TAGS.JavaScript],
  },
  {
    title: 'Expenses Control',
    description:
      'A website to control your expenses built using React & TailwindCSS, using visual helpers to check your expenses, filters, and being able to restart the app. Used to perform CRUD operations on expenses using localStorage.',
    link: 'https://expenses-control-codebreaker518.netlify.app/',
    github: 'https://github.com/CodeBreaker518/expense-control',
    image: '/projects/expenses-control.webp',
    tags: [TAGS.HTML5, TAGS.CSS, TAGS.TailWindCSS, TAGS.React, TAGS.JavaScript],
  },
  {
    title: 'Veterinary Control',
    description:
      'A website for a veterinary clinic built using React & TailwindCSS. Used to perform CRUD operations on pets using localStorage.',
    link: 'https://veterinary-control.netlify.app/',
    github: 'https://github.com/CodeBreaker518/VeterinaryControl',
    image: '/projects/veterinary-control.webp',
    tags: [TAGS.HTML5, TAGS.CSS, TAGS.TailWindCSS, TAGS.React, TAGS.JavaScript],
  },
  {
    title: 'Realtime Chat App',
    description: 'A realtime chat app built using Vanilla JavaScript, and Firebase with Google Authentication.',
    link: 'https://chat-firebase-codebreaker518.web.app/',
    github: 'https://github.com/CodeBreaker518/chat-firebase',
    image: '/projects/chat-firebase.webp',
    tags: [TAGS.HTML5, TAGS.CSS, TAGS.JavaScript, TAGS.Bootstrap, TAGS.FireBase],
  },
]
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article class='project mb-20'>
      <h3 class='text-2xl font-semibold text-yellow-200 mb-2'>{title}</h3>
      <p class='text-lg mb-4 text-pretty'>{description}</p>
      <ul class='flex gap-2 flex-row flex-wrap mb-2'>
        {tags.map((tag) => (
          <li>
            <span class={`flex items-center justify-center gap-x-1 rounded-full text-xs ${tag.class} py-1 px-2`}>
              {tag.icon && <tag.icon class='size-4' />}
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img class='rounded shadow-2xl shadow-white/10' src={image} alt={`Screenshot of the project ${title}`} />
    </article>
  ))
}
